@model SubjectApplication.Models.Subject
@Html.HiddenFor(m => m.ID)
@Html.HiddenFor(m => m.CreateDate)
@Html.HiddenFor(m => m.UpdateDate)
@Html.HiddenFor(m => m.Isdeleted)
<div class="row form-group">
    <div class="form-group col-md-7">
        @Html.LabelFor(model => model.SubjectName, htmlAttributes: new { @class = "col-form-label" })
        @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group col-md-4">
        @Html.LabelFor(model => model.SubjectCode, htmlAttributes: new { @class = "col-form-label" })
        @Html.EditorFor(model => model.SubjectCode, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>

<div class="row form-group">
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.SubjectLecturer, htmlAttributes: new { @class = "col-form-label" })
