    </div>
</div>

<div class="row form-group">
    <div class="form-group col-sm-7">
        @Html.LabelFor(model => model.StudyTimeStart, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.StudyTimeStart, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group col-sm-4">
        @Html.LabelFor(model => model.StudyTimeEnd, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.StudyTimeEnd, new { htmlAttributes = new { @class = "form-control" } })
