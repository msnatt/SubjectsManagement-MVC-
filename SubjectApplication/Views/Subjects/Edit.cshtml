@model SubjectApplication.Models.Subject
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Subjects", FormMethod.Post, new { @class = "form-horizontal", id = "form", name = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Subject</h4>
        <hr />

        @Html.EditorFor(m => m)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    function AddTopic() {
        $("#form").attr("action", '@Url.Action("AddTopicEdit","Subjects")');
        $("#form").submit();
    }
    function AddSubTopic(e) {
        e.value = true;
        $("#form").attr("action", '@Url.Action("AddSubTopicEdit","Subjects")');
        $("#form").submit();
    }
    function DelTopic(e) {
        e.value = true;
        $("#form").attr("action", '@Url.Action("DelTopicEdit","Subjects")');
        $("#form").submit();
    }
    function FuncUploadFile() {
        $("#form").attr("action", '@Url.Action("SaveFileToTempEdit","Subjects")');
        $("#form").submit();
    }
    function FuncDeleteFileInTemp(e) {
        e.value = true;
        $("#form").attr("action", '@Url.Action("DeleteFileInTempEdit","Subjects")');
        $("#form").submit();
    }

</script>

