@model SubjectApplication.Models.Subject

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Subjects", FormMethod.Post, new { @class = "form-horizontal", id = "form", name = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Subject</h4>
        <hr />

        @Html.EditorFor(m => m)
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script>
    function AddTopic() {
        $("#form").attr("action", '@Url.Action("AddTopic","Subjects")');
        $("#form").submit();
    }
    function AddSubTopic(e) {
        e.value = true;
        $("#form").attr("action", '@Url.Action("AddSubTopic","Subjects")');
        $("#form").submit();
    }
    function DelTopic(e) {
        e.value = true;
        $("#form").attr("action", '@Url.Action("DelTopic","Subjects")');
        $("#form").submit();
    }
    function FuncUploadFile() {
        $("#form").attr("action", '@Url.Action("SaveFileToTempCreate","Subjects")');
        $("#form").submit();
    }
    function FuncDeleteFileInTemp(e) {
        e.value = true;
        $("#form").attr("action", '@Url.Action("SaveFileToTempCreate","Subjects")');
        $("#form").submit();
    }
</script>
